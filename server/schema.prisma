generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model MOP {
    id               Int       @id @default(autoincrement())
    title            String
    description      String
    prerequisites    String  

    dateCreated      DateTime  @default(now())
    version          Int       @default(1)
    steps            Step[]
}

model Step {
    id               Int    @id @default(autoincrement())
    stepNumber       Int
    mopId            Int
    mop              MOP    @relation(fields: [mopId], references: [id])

    action           String
}

model Prompt {
    id          Int      @id @default(autoincrement())
    type        String   @unique 
    content     String   
    dateCreated DateTime @default(now())
}
